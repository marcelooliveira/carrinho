@using System.Web.Optimization
@using System.Collections.Generic
@model Carrinho.Core.DTOs.CartDTO
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.React("CartView", new
{
    title = "React JS.Net + React-Bootstrap",
    model = Model,
    urlNewProduct = @Url.Action("NewProduct", "Home" ),
    urlCheckoutSuccess = @Url.Action("CheckoutSuccess", "Home")
})

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/react/react.min.js"></script>
<script src="~/Scripts/react/react-dom.min.js"></script>
<script src="~/Scripts/react/react-with-addons.min.js"></script>
@*@Scripts.Render(" ~/bundles/main")*@
@Scripts.Render("~/Scripts/react-bootstrap.js"),
@Scripts.Render("~/Scripts/Index.jsx"),
@Scripts.Render("~/Scripts/showdown.js")

